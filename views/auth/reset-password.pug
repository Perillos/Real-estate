extends ../layout/index


block contents
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST")
                
                    .max-wmd.mxauto.my-10
                        if errors 
                            each error in errors
                                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Nueva Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nueva Contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="rep_password") Repite Tu Contraseña
                        input#rep_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite Tu Contraseña" type="password" name="rep_password")

                    input.w-full.bg-indigo-600.text-white.font-bold.py-3.cursor-pointer(class="hover:bg-indigo-700" type="submit" value="Reestablece Contraseña")


